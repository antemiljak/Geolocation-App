{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/geolocation-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/geolocation-app/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/geolocation-app/dist/$1"
    }
  ]
}
